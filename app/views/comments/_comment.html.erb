<% comments.each do |comment| %>
<tr>
  <td class="noborder">
    <%= link_to user_path(comment.user) do %>
    <%= attachment_image_tag(comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %></br>
    <%= comment.user.name %>
  </td>
  <% end %>
  <td><%= comment.comment %></td>
  <td><%= link_to 'Destroy', book_comment_path(comment.book_id, comment.id), method: :delete, class: 'btn btn-danger btn-sm', remote: true %></td>
</tr>
<% end %>