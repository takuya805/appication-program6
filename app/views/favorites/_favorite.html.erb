<% if user_signed_in? %>
  <% if book.favorited_by?(current_user) %>
    <p><%= link_to book_favorites_path(book.id), remote: true, method: :delete do %>
        ♥<%= book.favorites.count %>
       <% end %>
    </p>
  <% else %>
    <p><%= link_to book_favorites_path(book.id), remote: true, method: :post do %>
        ♡<%= book.favorites.count %>
       <% end %>
    </p>
  <% end %>
<% end %>